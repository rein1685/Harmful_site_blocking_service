<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monitoring_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lhy.myapplication.MainActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="#cacaca"
        android:layout_marginLeft="20dp"
        android:ems="20"
        android:layout_marginRight="20dp"
        android:id="@+id/textView"
        android:scrollbars="vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_monitor"
        android:layout_alignBaseline="@id/btn_add"
        android:layout_toRightOf="@id/btn_add"
        android:layout_marginLeft="15dp"
        android:text="monitoring"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_filter"
        android:layout_marginLeft="15dp"
        android:layout_alignBaseline="@id/btn_add"
        android:layout_toRightOf="@id/btn_monitor"
        android:onClick="onClick"
        android:text="FILTER"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginTop = "19dp"
        android:onClick="onClick"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:text="REMOVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_remove"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add"
        android:onClick="onClick"/>

    <Button
        android:text="Restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_restore"
        android:onClick = "onClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_monitor"
        android:layout_toEndOf="@+id/btn_monitor" />

</RelativeLayout>
